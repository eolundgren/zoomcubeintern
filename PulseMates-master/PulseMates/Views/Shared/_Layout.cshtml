            <div class="container-fluid">
                <div class="row-fluid">

                    <div class="span8">
                        <nav>
                            <ul class="inline">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Participate", "Index", "Participate")</li>
                                <li>@Html.ActionLink("Demos", "Index", "Demo")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                        </nav>
                    </div>
                    <div class="span4">
                        <p>@ApplicationInfo.Copyright</p>
                    </div>

                </div>
            </div>
        </footer>*@

        <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/knockout")
        @RenderSection("scripts", required: false)
        <script>
            $("#myModal").modal('show');
        </script>
        <script>
            var FirstTime = 0;
            function Tutorial1() {
                if (FirstTime == 0) {

                    $("#SearchBar").popover('show');
                    FirstTime = 1;
                }
            }
            function Tutorial2() {
                if (FirstTime == 1) {
                    $("#SearchBar").popover('hide');
                    $("#Tile1").popover('show');
                    FirstTime = 2;
                }
            }
            function Tutorial3() {
                if (FirstTime == 2) {
                    $("#Tile1").popover('hide');
                    $("#CloseBox1").popover('show');
                    $("#CloseBox2").popover('show');
                    FirstTime = 3;
                }
            }
            function Tutorial4() {
                if (FirstTime == 3) {
                    $("#CloseBox1").popover('hide');
                    $("#CloseBox2").popover('hide');
                    $("#map-toggleTab").popover('show');
                    FirstTime = 4;
                }
            }
            function Tutorial5() {
                if (FirstTime == 4) {

                    $("#map-toggleTab").popover('hide');
                    $("#search").popover('show');
                    FirstTime = 5;
                }
            }

            function FirstTimeNo() {
                FirstTime = 5;

            }
        </script>
    </body>
</html>
